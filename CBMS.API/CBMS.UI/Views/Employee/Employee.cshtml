@model IEnumerable<CBMS.Entity.Model.Employee>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="row">
    <div class="col-12">
        <div class="h2">
            EMPLOYEE DETAILS
        </div>

        <hr />
        <table class="table table-light table-bordered table-hover">
            <thead>
                <tr>
                    <th>Employee Id  </th>
                    <th>Employee Name</th>
                    <th>Employee Type</th>
                    <th>Trip Details</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.empId </td>
                        <td>@employee.empName</td>
                        <td>@employee.empType</td>
                        <td>@employee.tripDetails</td>
                        <td><a asp-controller="Employee" asp-action="EditEmployee" asp-route-empId="@employee.empId">Edit</a></td>
                        <td><a asp-controller="Employee" asp-action="DeleteEmployee" asp-route-empId="@employee.empId">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>